<%- include("partials/header") %>
<link rel="stylesheet" type="text/css" href="/styles/new.css">
<div class="container">
    <div class="new-post-heading">Add New Post</div>
    <form action="/" method="POST">
        <input class="input-field" type="text" name="blog[title]" placeholder="Title">
        <input class="input-field" type="text" name="blog[image]" placeholder="Image URL">
        <textarea class="input-field" rows="10" name="blog[description]"></textarea>
        <input class="add-post-btn" type="submit">
    </form>
</div>
